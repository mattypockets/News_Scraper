<div class="row article">
    {{!-- View Article Title and Summary --}}
    <div class="col s12">
        <a href="{{this.link}}" target="_blank"><h4>{{this.title}}</h4></a>
        <div class="row">
            <div class="col s12">
                <p>{{this.summary}}</p>
            </div>
        </div>
        <div class="row">
            {{!-- Comment Section --}}
            <form data-id="{{this.id}}" class="col s12 commentSubmit">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="{{this.id}}" class="materialize-textarea"></textarea>
                        <label for="{{this.id}}">Comment on this article</label>
                        <button class="btn waves-effect waves-light btn-small" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            {{!-- View Comments --}}
            <div class="col s12">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header"><i class="material-icons">textsms</i>Comments</div>
                        <div class="collapsible-body">
                            <div>
                                {{#each this.comments}}
                                    {{this.text}}<br><button data-id="{{this._id}}" class="btn waves-effect waves-light btn-small delete">Delete</button>
                                {{/each}}
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>